<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_splash_title_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="@dimen/textsize_20dp"
        android:autoSizeTextType="uniform"
        android:text="@string/splash_title"
        android:textColor="@color/pink_FFB1B9"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/activity_splash_title_tv2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="@dimen/textsize_20dp"
        android:autoSizeTextType="uniform"
        android:text="@string/splash_title2"
        android:textColor="@color/pink_FFB1B9"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/activity_splash_title_tv"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/activity_splash_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/activity_splash_title_tv" />


    <TextView
        android:id="@+id/activity_splash_title_tv3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="@dimen/textsize_20dp"
        android:autoSizeTextType="uniform"
        android:text="@string/splash_title3"
        android:textColor="@color/pink_FFB1B9"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/activity_splash_title_tv2"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/activity_splash_title_tv2"
        app:layout_constraintTop_toBottomOf="@+id/activity_splash_title_tv2" />


    <ImageView
        android:id="@+id/activity_splash_loading_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/medium_margin_16dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_splash_title_tv3"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/activity_splash_app_name_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="@dimen/large_textsize_14dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/blue_3264AA"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Puzzle Empire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_splash_title_tv2"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="@+id/activity_splash_title_tv2"
        app:layout_constraintTop_toBottomOf="@+id/activity_splash_loading_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>