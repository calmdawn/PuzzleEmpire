<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_layout_background_round_pink_light">

    <TextView
        android:id="@+id/common_layout_puzzle_score_title_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/medium_margin_16dp"
        android:autoSizeMaxTextSize="@dimen/textsize_20dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/game_set"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/common_layout_puzzle_score_result_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/common_layout_puzzle_score_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/small_margin_8dp"
        android:layout_marginBottom="@dimen/small_margin_8dp"
        android:autoSizeMaxTextSize="@dimen/sub_title_textsize_24dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/common_layout_puzzle_score_return_select_game_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_layout_puzzle_score_title_tv" />

    <TextView
        android:id="@+id/common_layout_puzzle_score_return_select_game_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/medium_margin_16dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/common_layout_background_round_pink"
        android:gravity="center"
        android:padding="@dimen/small_padding_8dp"
        android:text="@string/common_layout_puzzle_return_main"
        android:textColor="@color/white_FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>