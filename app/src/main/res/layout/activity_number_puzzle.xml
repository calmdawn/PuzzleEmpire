            android:id="@+id/activity_number_btn_num21"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:id="@+id/activity_number_btn_num22"
            android:layout_width="0dp"
