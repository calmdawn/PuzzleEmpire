            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:id="@+id/activity_number_btn_num24"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:id="@+id/activity_number_btn_num25"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="5dp" />

        <!-- 5*5의 2행-->

    </GridLayout>


    <TextView
        android:id="@+id/activity_number_puzzle_countdown_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="제한시간 : 60초"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/textsize_20dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_image_swap_puzzle_original_iv"
        app:layout_constraintEnd_toEndOf="@+id/activity_number_ly_puzzle"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_number_ly_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/activity_number_ly_puzzle" />

    <Button
        android:id="@+id/activity_number_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="시 작 하 기"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_number_puzzle_countdown_tv" />


    <RelativeLayout
        android:id="@+id/activity_number_ly_score"
        android:layout_width="250sp"
        android:layout_height="400sp"
        android:layout_centerInParent="true"
        android:background="@color/colorScore"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_number_tv_scoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/score_title"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_number_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_number_tv_scoreTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="00"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/activity_number_tv_resultBelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_number_tv_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="위의 점수를 흭득하셨습니다"
            android:textSize="15sp" />

        <Button
            android:id="@+id/activity_number_btn_returnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_number_tv_resultBelow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="게임선택 화면으로 이동" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>